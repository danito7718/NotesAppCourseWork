@model IEnumerable<NotesApp2.Models.Note>

@{
    ViewData["Title"] = "Моите бележки";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-journal-text"></i> Моите бележки</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Нова бележка
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var note in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" style="border-left: 4px solid @note.Color;">
                    <div class="card-body">
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text">@note.Content</p>
                        <small class="text-muted">
                            Създадена: @note.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </small>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Редактирай
                            </a>
                            <form asp-action="Delete" asp-route-id="@note.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Сигурни ли сте?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Изтрий
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <i class="bi bi-journal-x" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3 text-muted">Нямате бележки</h3>
            <p class="text-muted">Създайте първата си бележка сега!</p>
            <a asp-action="Create" class="btn btn-primary">Създай бележка</a>
        </div>
    }
</div>